# -----------------------------------
# Application runtime configuration
# -----------------------------------

# Хост и порт, на котором запускается приложение
APP_CONFIG__RUN__HOST=0.0.0.0
APP_CONFIG__RUN__PORT=8000

# -----------------------------------
# Database configuration
# -----------------------------------

# Формат: postgresql+asyncpg://USER:PASSWORD@HOST:PORT/DB
APP_CONFIG__DB__URL=postgresql+asyncpg://postgres:1234@pg:5432/postgres

# -----------------------------------
# LLM provider configuration
# -----------------------------------

# API Key (замените на свой локально)
APP_CONFIG__LLM__API_KEY=your_api_key_here

# Base URL для OpenRouter
APP_CONFIG__LLM__API_BASE=https://openrouter.ai/api/v1

# Модель по умолчанию
APP_CONFIG__LLM__DEFAULT_MODEL=openai/gpt-oss-20b:free
